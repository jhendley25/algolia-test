<p id="notice"><%= notice %></p>

<h1>Apps</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Rating</th>
      <th>Name</th>
      <th>Image</th>
      <th>Link</th>
      <th>Rating count</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.category %></td>
        <td><%= app.rating %></td>
        <td><%= app.name %></td>
        <td><%= app.image %></td>
        <td><%= app.link %></td>
        <td><%= app.rating_count %></td>
        <td><%= app.price %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path %>
